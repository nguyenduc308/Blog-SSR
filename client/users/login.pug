extends ../layout/header
block content

   h1 Login
   if errors
      each error in errors
         .alert.alert-danger=error
   form(action="/auth/login" method="POST")
      .form-group
         label(for="email") Email:
         input.form-control(type="text" name="email" id="email" value=value?value.email:"")
      .form-group
         label(for="password") Password:
         input.form-control(type="text" name="password" id="password" value=value?value.password:"")
      button.btn.btn-primary.mt-20 Login
